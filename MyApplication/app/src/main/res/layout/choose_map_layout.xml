<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/trainlineLogos"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="275dp">

        <ImageButton
            android:id="@+id/lirr_logo"
            android:background="@android:color/transparent"
            android:src="@drawable/lirr_logo_official"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false" />

        <ImageButton
            android:id="@+id/metro_north_logo"
            android:background="@android:color/transparent"
            android:src="@drawable/metro_north_logo"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false" />
        <ImageButton
            android:id="@+id/njTransit"
            android:paddingTop="10dp"
            android:src="@drawable/nj_transit_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="false" />


    </LinearLayout>



</RelativeLayout>